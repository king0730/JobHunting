<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/white">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#00BCD4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安卓开发实习生"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>


            <TextView
                android:id="@+id/job_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5千-1万"
                android:textColor="#127BCD"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/job_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本科 / 经验不限 / Android"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/com_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网易科技公司 / 已上市 / 10000人以上"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/hr_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:id="@+id/hr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑女士"
                android:textSize="14sp"
                android:layout_toRightOf="@id/hr_image"
                android:layout_marginLeft="5dp"/>


            <TextView
                android:id="@+id/job_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#00BCD4"/>


</LinearLayout>